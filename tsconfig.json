{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "module": "es2015",
    "target": "es2015",
    "noImplicitAny": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "src": ["./src/*"],
      "testdata": ["./testdata/*"]
    }
  },
  "include": [
    "./src",
    "./testdata"
  ],
  "exclude": [
    "./node_modules"
  ]
}
